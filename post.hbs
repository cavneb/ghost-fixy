{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}


<section class="content" role="main">

    <article class="{{post_class}} main-article">

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

        
        <div class="inner">
        	{{! Everything below outputs content of the the post which has been published }}
	        <time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time> {{#if tags}}<span class="post-tags">on {{tags separator=", "}}</span>{{/if}}        	
    	    <h1 class="post-title">{{{title}}}</h1>
            {{content}}
         </div>

			<div class="share"><span>Share</span> 
			    <a class="icon-twitter" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"
			        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
			        Twitter
			    </a>
			    <a class="icon-pinterest" href="http://pinterest.com/pin/create/button/?url={{url absolute="true"}}"
			        onclick="window.open(this.href, 'pinterest-share','width=580,height=296');return false;">
			        Pinterest
			    </a>
			    <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
			        onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
			        Facebook
			    </a>
			    <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
			       onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
			        Google+
			    </a>
			</div>
			
            
            
            {{#if author}}
                <div class="author">
                	{{#if author.image}}<div class="author-avatar" style="background-image: url({{author.image}})"></div>{{/if}}
                	<div class="author-bio">
	                    <h6>By {{#if author.website}}<a href="{{author.website}}">{{/if}}{{author.name}}{{#if author.website}}</a>{{/if}}</h6>
	                    <p>{{author.bio}}</p>
                    </div>
                </div>
            {{/if}}
            
            
            {{>disqus }}
            
            <nav class="pagination">
            	<a href="javascript:history.back(-1)" class="newer-posts">&larr; Return</a>
            </nav>


        {{/post}}

    </article>
    
</section>


